{
    "name": "nnU-Net Satellite Segmentation",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "root",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "nnunetv2_download_pretrained_weights",
    "containerEnv": {
        "nnUNet_raw": "/workspace/nnUNet_raw",
        "nnUNet_preprocessed": "/workspace/nnUNet_preprocessed",
        "nnUNet_results": "/workspace/nnUNet_results"
    },
    "runArgs": [
        "--gpus=all",
        "--device", "nvidia.com/gpu=all",
        "--userns=keep-id",
        "--ipc=host"
    ]
}